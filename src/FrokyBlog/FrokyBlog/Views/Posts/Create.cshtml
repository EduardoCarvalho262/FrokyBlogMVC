@model FrokyBlog.Models.Post

@{
    ViewData["Title"] = "Criar Post";
}

<div class="container mt-5">
    <h1 class="display-4 mb-3 text-center">Crie seu Post!</h1>
    <div class="row">
        <div class="col-md-12">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label class="control-label mt-3">Título:</label>
                    <div class="input-group">
                        <input asp-for="Title" class="form-control" />
                    </div>
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label class="control-label mt-3">Conteúdo:</label>
                    <textarea asp-for="Content" class="form-control" rows="4" cols="50"></textarea>
                    <span asp-validation-for="Content" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label mt-3">Descrição:</label>
                    <textarea asp-for="Description" class="form-control"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label mt-3">Data da Postagem:</label>
                    <input asp-for="CreatedDate" class="form-control" />
                    <span asp-validation-for="CreatedDate" class="text-danger"></span>
                </div>
                <div class="form-group mt-4 mb-4 d-flex justify-content-between">
                    <input type="submit" value="Criar" class="btn btn-primary w-50 me-2"/>
                    <a asp-controller="Home" asp-action="Index" class="btn btn-secondary w-50 ms-2">Voltar</a>
                </div>
            </form>
        </div>
    </div>
</div>




@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
